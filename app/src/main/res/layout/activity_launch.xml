<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lightningboltstudios.audubontrailmap.LaunchActivity"
    android:background="#ead2c3">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/schlitzaudubonlogo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trail Locations"
        android:id="@+id/triallocationsbutton"
        android:onClick="gotoTrailLocations"
        android:background="#008d7f"
        android:textColor="#ffffff"
        android:maxWidth="200dp"
        android:maxHeight="25dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/livetrialmapbutton"
        android:layout_alignEnd="@+id/livetrialmapbutton"
        android:layout_alignLeft="@+id/livetrialmapbutton"
        android:layout_alignStart="@+id/livetrialmapbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Trail Map"
        android:id="@+id/livetrialmapbutton"
        android:onClick="gotoTrailMap"
        android:background="#008d7f"
        android:textColor="#ffffff"
        android:width="200dp"
        android:maxHeight="25dp"
        android:layout_below="@+id/triallocationsbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exitbutton"
        android:background="#008d7f"
        android:textColor="#ffffff"
        android:width="200dp"
        android:maxHeight="25dp"
        android:onClick="exit"
        android:layout_below="@+id/livetrialmapbutton"
        android:layout_alignLeft="@+id/livetrialmapbutton"
        android:layout_alignStart="@+id/livetrialmapbutton"
        android:layout_marginTop="30dp" />



</RelativeLayout>
